<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.com.example.android.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps!"
        android:fontFamily="sans-serif"
        android:id="@+id/nanodegree_text"
        android:textColor="@android:color/holo_blue_dark"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/popular_button"
        android:text="POPULAR MOVIES"
        android:layout_below="@+id/nanodegree_text"
        android:onClick="showPopularMovies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#fa7006" />

    <Button
        android:id="@+id/stock_hawk_button"
        android:layout_below="@+id/popular_button"
        android:text="STOCK HAWK"
        android:onClick="showStockHawk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#fa7006" />

    <Button
        android:id="@+id/build_it_bigger_button"
        android:layout_below="@+id/stock_hawk_button"
        android:text="BUILD IT BIGGER"
        android:onClick="showBuildItBigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#fa7006" />

    <Button
        android:id="@+id/make_you_app_button"
        android:layout_below="@+id/build_it_bigger_button"
        android:text="MAKE YOUR APP MATERIAL"
        android:onClick="showMakeYourApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#fa7006" />

    <Button
        android:id="@+id/ubiquitous_button"
        android:layout_below="@+id/make_you_app_button"
        android:text="GO UBIQUITOUS"
        android:onClick="showUbiquitous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#fa7006" />

    <Button
        android:id="@+id/capstone_button"
        android:layout_below="@+id/ubiquitous_button"
        android:text="CAPSTONE"
        android:onClick="showCapstone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:height="50dp"
        android:width="300dp"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:background="#fa7006" />
</RelativeLayout>
